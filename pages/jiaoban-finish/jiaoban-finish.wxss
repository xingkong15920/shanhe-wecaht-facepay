.box {
	width: 100%;
	height: 100vh;
	background-color: #f5f5f5
}

.xiangqing {
    height: 100rpx;
    background: linear-gradient(138deg, rgba(76, 206, 78, 1) 0%, rgba(30, 173, 31, 1) 100%);
    text-align: center;
}
.xqImg {
    width: 38rpx;
    height: 53rpx;
    position: absolute;
    left: 35rpx;
    top: 27rpx;
}
.xqText {
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 100rpx;
}

.top {
	width: 100%;
	padding-top: 48rpx;
	border-bottom: 20rpx solid #F5F5F5;
	background-color: #fff;
}

.top-img {
	display: block;
	width: 85rpx;
	height: 98rpx;
	margin: 0 auto;
}

.top-text {
	width: 100%;
	text-align: center;
	display: block;
	height: 50rpx;
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFangSC;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
	line-height: 44rpx;
	margin-top: 20rpx;
	margin-bottom: 28rpx;
}

.bottom {
	padding-top: 22rpx;
	width: 100%;
	background-color: #fff;
}

.bottom-item {
	width: 100%;
	height: 92rpx;
	border-bottom: 1rpx solid #E5E5E5;
    display: flex;
    align-content: center;
}

.bottom-item-left {
	width: 50%;
	display: inline-block;
	text-indent: 32rpx;
	text-align: left;
	height: 92rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFangSC;
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
	line-height: 92rpx;
}

.bottom-item-right {
	width: 47%;
	display: inline-block;
	text-align: right;
	height: 92rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFangSC;
	font-weight: 500;
	color: #27B328;
	line-height: 92rpx;
}

.jiaoban-foot {
	width: 100%;
	text-align: center;
	position: fixed;
	left: 0;
	bottom: 0;
	height: 100rpx;
	background:rgba(36,177,37,1);
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFangSC;
	font-weight: 500;
	color: rgba(255, 255, 255, 1);
	line-height: 100rpx;
}