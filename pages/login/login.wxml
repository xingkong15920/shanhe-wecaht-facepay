<view class="box" disable-scroll="{{true}}" wx:if="{{type==1}}">
    <view class="hello">你好！</view>
    <view class="title">欢迎使用闪盒收银，请登录</view>
    <view class="userInfo">
        <view class="userInfo-title">账号</view>
        <view class="userInfo-box">
            <input type="number" focus="{{focus}}" value="{{phone}}" placeholder="请输入账号" onInput="phone" class="userInfo-box-input" />
            <image src="../img/clear.png" class="clear" ontap="clear" />
        </view>
    </view>
    <view class="userInfo" style="margin-bottom:0">
        <view class="userInfo-title">密码</view>
        <view class="userInfo-box">
            <input type="text" password="{{true}}" value="{{password}}" placeholder="请输入密码" onInput="pass" class="userInfo-box-input" />
            <view  class="clearBox">
                <image src="../img/clear.png" class="clear" ontap="clear1" />
                <image src="../img/wyincang.png" class="yincang" />
                <image src="../img/wxianShi.png" class="yincang" />
            </view>

        </view>
    </view>
    <view class="markBox">
        <view class="mark-left">
            <label class="checkbox">
                <checkbox checked="{{save}}" color="#ffffff" class="check-b" onChange="save1" />
                <text class="checkbox-text">记住密码</text>
            </label>
        </view>
        <view class="mark-right" onTap="forget">忘记密码？</view>
    </view>
    <view class="login" onTap="login1">登录</view>
    <view class="box-foot">

    </view>
</view>
<view class="box" disable-scroll="{{true}}" wx:if="{{type==2}}" style="position:fixed;left:0;top:0">
    <view class="back" onTap="typeBack"> 《 返回 </view>
    <view class="pw-title">忘记密码</view>
    <view class="userInfo" style="margin:0 auto;margin-bottom:50rpx;">
        <view class="userInfo-title">手机号</view>
        <view class="userInfo-box">
            <input type="number" value="{{pwphone}}" placeholder="请输入手机号" onInput="pwphone" class="userInfo-box-input" />
            <!-- <image  src="../img/clear.png" class="clear" ontap="clear" /> -->
        </view>
    </view>
    <view class="userInfo" style="margin:0 auto;margin-bottom:50rpx;">
        <view class="userInfo-title">验证码</view>
        <view class="userInfo-box" style="position:relative;left:0;top:0">
            <input type="text" value="{{code}}" placeholder="请输入验证码" onInput="code" class="userInfo-box-input" />
            <!-- <image  src="../img/clear.png" class="clear"  ontap="clear1"  /> -->
            <view class="getCode" onTap="getCode">{{codeInfo}}</view>
        </view>
    </view>
    <view class="userInfo" style="margin:0 auto;margin-bottom:50rpx;">
        <view class="userInfo-title">新密码</view>
        <view class="userInfo-box">
            <input type="text" password="{{true}}" value="{{password1}}" placeholder="请输入新密码" onInput="pass1" class="userInfo-box-input" />
            <!-- <image  src="../img/clear.png" class="clear"  ontap="clear1"  /> -->
        </view>
    </view>
    <view class="userInfo" style="margin:0 auto;margin-bottom:50rpx;">
        <view class="userInfo-title">确认密码</view>
        <view class="userInfo-box">
            <input type="text" password="{{true}}" value="{{password2}}" placeholder="请再次输入新密码" onInput="pass2" class="userInfo-box-input" />
            <!-- <image  src="../img/clear.png" class="clear"  ontap="clear1"  /> -->
        </view>
    </view>
    <view class="login" onTap="login2">去登录</view>
    <view class="box-foot" style="margin-top:60rpx;">

    </view>
</view>